<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingAppMauiVersion1.Views.WeatherPage"
             Title="WeatherPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="The weather in Nyköping"/>
            <Label Text="{Binding TheWeather.Main.Temp, StringFormat='Temp: {0} °C'}"/>
            <Label Text="{Binding TheWeather.Main.FeelsLike, StringFormat='Feels like: {0} °C'}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>